//
  Creating the non-sticky horizontal navbar. Has a search bar, login button, signup button(fa-user icon), and profile button
div
  nav.navbar.navbar-expand-sm.justify-content-end
    ul.navbar-nav
      li.nav-item
        form.form-inline(method='GET' name='searchbar' style='margin-right:30px')
          input.form-control.mr-sm-2(type='text' placeholder='Search')
          button.btn(style='color:teal;border-color:teal' type='submit') Search
      li
        a.nav-link(href='signup.html' style='color:teal') Sign Up
      li.nav-item
        a.nav-link.fa.fa-user(href='#profile' style='font-size:20px;color:teal')
      li.nav-item
        button.btn.btn-bg-black(type='button' style='color:teal' data-toggle='modal' data-target='#popUpWindow') Login
        #popUpWindow.modal.fade
          .modal-dialog
            .modal-content.border-2.border-light(style='background-color:black')
              .modal-header
                h3.modal-title(style='color:white;') Log In
                button.close(type='button' data-dismiss='modal' style='color:white') &times;
              .modal-body
                form(role='form')
                  .form-group
                    input.form-control(type='email' placeholder='Email')
                  .form-group
                    input.form-control(type='password' placeholder='Password')
                  button.btn.btn-primary.btn-block Submit
              .modal-footer
                a(href='signup.html') Sign Up
